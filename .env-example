# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor
PORT=3000

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos (Docker mapea 5433->5432)
DB_PORT=5433

# Usuario de la base de datos
DB_USER=postgres

# Contraseña de la base de datos
DB_PASSWORD=password

# Nombre de la base de datos
DB_NAME=users_db

# ===========================================
# CONFIGURACIÓN DE DOCKER (OPCIONAL)
# ===========================================

# Puerto del contenedor de PostgreSQL
POSTGRES_PORT=5433

# Puerto del contenedor de la aplicación
APP_PORT=3000

# ===========================================
# CONFIGURACIÓN DE TESTING
# ===========================================

# Base de datos para testing (opcional)
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_USER=postgres
TEST_DB_PASSWORD=password
TEST_DB_NAME=users_test_db

# ===========================================
# CONFIGURACIÓN DE SWAGGER
# ===========================================

# URL base para documentación Swagger
SWAGGER_BASE_URL=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Clave secreta para JWT (si se implementa en el futuro)
JWT_SECRET=your-super-secret-jwt-key-here

# Tiempo de expiración de tokens (en segundos)
JWT_EXPIRES_IN=3600

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================

# Límite de requests por minuto
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURACIÓN DE PAGINACIÓN
# ===========================================

# Límite máximo de elementos por página
MAX_PAGE_SIZE=100

# Límite por defecto de elementos por página
DEFAULT_PAGE_SIZE=10

# ===========================================
# CONFIGURACIÓN DE SEEDERS
# ===========================================

# Número de usuarios a crear en los seeders
SEEDER_USER_COUNT=20

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Habilitar métricas de performance
ENABLE_METRICS=true

# Puerto para métricas (opcional)
METRICS_PORT=9090
