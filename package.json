{
  "name": "users-api",
  "version": "1.0.0",
  "description": "API de usuarios con Node.js, TypeScript y PostgreSQL",
  "main": "dist/app/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app/server.js",
    "dev": "ts-node --require reflect-metadata src/app/server.ts",
    "watch": "ts-node --require reflect-metadata --watch src/app/server.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api",
    "users",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "body-parser": "^2.2.0",
    "config": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27"
  }
}
